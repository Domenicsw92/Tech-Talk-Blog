<div class="text-center">
    <h3>Update Your Post:</h3>

    <form class="form update-post-form">
        <div class="form-group">
            <label for="post-name">project name:</label>
            <input class="form-input" type="text" id="post-nameUpdate" name="post-nameUpdate" />
            {{name}}
        </div>

        <div class="form-group">
            <label for="project-desc">description:</label>
            <textarea class="form-input" id="post-descUpdate" name="post-descUpdate">{{description}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-updateComfirm" id="updatePost">Comfirm Update</button>
        </div>
    </form>
</div>


<script src="./js/profile.js"></script>